<%- include ('partials/header.ejs') -%>

<%- include ('partials/streamToasts.ejs') -%>

<!-- Include Sidebar -->
<%- include ('partials/sidebar.ejs') -%>

<!-- Start Page Content -->
<div id="content">

    <!-- Include Navigation -->
    <%- include ('partials/topNav.ejs') -%>
    <%- include ('partials/loadingSpinner.ejs') -%>

    <div id="main-content">
        <div class="container">
            <br>
            <div class="row">
                <!-- Content -->
                <div class="col-12">
                    <!-- Services -->
                    <div class="row">
                        <% fortatus = async (req, res, next) => {
                            this.resetStreamStatus();
                            let streamResponse;
                            // build URI from config
                            let uri = '';
                            for (let i = 0; i < config.runtime.twitchStreams.length; i++) {
                                if (i !== 0) {
                                    uri += '&';
                                }
                                uri += 'user_login=' + config.runtime.twitchStreams[i].name;
                            } (let i = 0; i < data.services.length; i++) { %>
                            <div class="col-sm-12 col-md-6">
                                <a href="<%= data.services[i].uri %>">
                                    <div class="list-group-item list-group-item-action">
                                        <div class="row no-gutters">
                                            <div class="col-md-4">
                                                <img src="<%= data.services[i].img %>" class="card-img"
                                                     id="serviceItem">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                    <h5 class="card-title"><b><%= data.services[i].name %></b></h5>
                                                    <p class="card-text"><%= data.services[i].description %></p>
                                                    <p class="text-right">
                                                        <small>powered by: <%= data.services[i].sponsor %></small>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <br>
                            </div>
                        <% } %>

                        <div class="col-sm-12 col-md-6">
                            <ins class="adsbygoogle"
                                 style="display:block"
                                 data-ad-format="fluid"
                                 data-ad-layout-key="-fb+5w+4e-db+86"
                                 data-ad-client="ca-pub-4826635938982516"
                                 data-ad-slot="8557364562">
                            </ins>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        </div>

        <!-- Include Bottom Content -->
        <%- include ('partials/bottom.ejs') -%>

    </div>
</div>

<%- include ('partials/footer.ejs') -%>