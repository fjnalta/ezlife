<% include partials/header.ejs %>

<div class="container">
    <br>
    <h1 class="text-center">Chat</h1>
    <p class="text-center"><b style="color:red">SERVICE OFFLINE</b></p>
    <!-- Registration -->
    <h2 class="text-center">Registration</h2>
    <form>
        <label for="username">Username*</label>
        <input type="text" id="username" name="username">
        <label for="nickname">Nickname*</label><br>
        <input type="text" id="nickname" name="nickname"><br>

        <label for="password">Password*</label><br>
        <input type="password" id="password" name="password" onchange="checkPasswordMatch();"><br>
        <i>Password needs to be at least 8 letters.</i>
        <label for="password">Repeat Password*</label><br>
        <input type="password" id="password2" name="password2"><br>
        <div class="registrationFormAlert" id="divCheckPasswordMatch">---</div>
        <br>
        <label for="email">E-Mail</label><br>
        <input type="text" id="email" name="email"><br>
    </form>
    <i>* are required fields </i>
    <br>
    <button onclick="registerUser()" margin-top="50px" type="submit" name="submit">Send</button>
    <div class="registrationAlert" id="divCheckRegistration">---</div>

    <!-- Howto -->
    <h2 class="text-center">HOWTO</h2>
    <br>
    <h4 class="text-center">1. Download XMPP Chat Client</h4>
    <br>
