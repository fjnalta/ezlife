<div class="card">
    <div class="card-header">
        App Server
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <div class="row align-items-center">
                <div class="col-10">
                    <a href="/chat">Chat</a>
                </div>
                <div class="col-2">
                    <img src="img/twitch/icon_offline.png" class="img-fluid">
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row align-items-center">
                <div class="col-10">
                    Chat - Push Service
                </div>
                <div class="col-2">
                    <img src="img/twitch/icon_offline.png" class="img-fluid">
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row align-items-center">
                <div class="col-10">
                    <a href="/services#Teamspeak">Teamspeak</a>
                </div>
                <div class="col-2">
                    <img src="img/twitch/icon_online.png" class="img-fluid">
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row align-items-center">
                <div class="col-10">
                    <a href="/services#Discord">Discord</a>
                </div>
                <div class="col-2">
                    <img src="img/twitch/icon_online.png" class="img-fluid">
                </div>
            </div>
        </li>
    </ul>
    <div class="card-header">
        Web Server
    </div>
    <ul class="list-group list-group-flush">
        <% for (var i = 0; i < webServerStatus.length; i++) { %>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-10">
                        <% if(webServerStatus[i].status == false){ %>
                            <%= webServerStatus[i].name %>
                        <% } else{ %>
                                <a href="<%= webServerStatus[i].url %>"><%= webServerStatus[i].name %></a>
                        <% } %>
                    </div>
                    <div class="col-2">
                        <% if(webServerStatus[i].status == false) { %>
                            <img src="img/twitch/icon_offline.png" class="img-fluid">
                        <% } else { %>
                            <img src="img/twitch/icon_online.png" class="img-fluid">
                        <% } %>
                    </div>
                </div>
            </li>
        <% } %>
            <div class="card-header">
                Game Server
            </div>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-10">
                        <a href="/services#Minecraft">Minecraft</a>
                    </div>
                    <div class="col-2">
                        <img src="img/twitch/icon_online.png" class="img-fluid">
                    </div>
                </div>
            </li>
    </ul>
</div>
<br>