                        <% if(webServerStatus[i].status == false){ %>
                            <%= webServerStatus[i].name %>
                        <% } else{ %>
                                <a href="<%= webServerStatus[i].url %>"><%= webServerStatus[i].name %></a>
                        <% } %>
                    </div>
                    <div class="col-2">
                        <% if(webServerStatus[i].status == false) { %>
                            <img src="img/twitch/icon_offline.png" class="img-fluid">
                        <% } else { %>
                            <img src="img/twitch/icon_online.png" class="img-fluid">
                        <% } %>
                    </div>
                </div>
            </li>
        <% } %>
    </ul>
    <div class="card-header">
        Game Server
    </div>
    <ul>
        <% for (var i = 0; i < gameServerStatus.length; i++) { %>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-10">
                        <% if(gameServerStatus[i].status == false){ %>
                            <%= gameServerStatus[i].name %>
                        <% } else{ %>
                            <a href="<%= gameServerStatus[i].url %>"><%= gameServerStatus[i].name %></a>
                        <% } %>
                    </div>
                    <div class="col-2">
                        <% if(gameServerStatus[i].status == false) { %>
