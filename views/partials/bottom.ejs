<!-- Footer -->
<div id="footer">
    <!-- Ads -->
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-4826635938982516"
                     data-ad-slot="8809819461"
                     data-ad-format="auto"
                     data-full-width-responsive="true">
                </ins>
            </div>
        </div>
    </div>
    <!-- Content -->
    <div class="container">
        <div class="row">
            <div class="col-sm-6 text-left">
                <br><img src="img/ezlife/logo_new.jpg" class="img-responsive img-thumbnail img-fluid" height="35%"
                         width="35%">
                <p>
                    ezlife.eu, <%= data.about.postalCode %> <%= data.about.town %><br>
                    <%= data.about.country %>
                </p>
            </div>
            <div class="col-sm-6 text-right">
                <div id="footer-right">
                    <br>
                    <p><img src="img/ezlife/textmark1.svg" class="img-responsive img-thumbnail img-fluid" width="35%">
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Copyright -->
<div class="container" id="signature">
    <div class="row">
        <div class="col-sm-8 text-left">
            <br>
            <p>Created by <a href="/about"><%= data.about.name %></a></p>
        </div>
        <div class="col-sm-4 text-right">
            <br>
            <p>Designed by <a href="https://<%= data.about.homepage %>/about"><%= data.about.homepage %></a></p>
        </div>
    </div>


    <!-- Include cookiealert script -->
    <script src="/js/handleCookies.js"></script>

    <!-- Show Ads only if cookies are accepted -->
    <script>
        $(document).ready(function () {
            if (getCookie("acceptCookies")) {
                // Load Ads after page is fully faded in and all divs are visible
                setTimeout(function () {
                    console.log('Loading Ads');
                    [].forEach.call(document.querySelectorAll('.adsbygoogle'), function () {
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    });
                }, 1000);
            }
        });
    </script>
</div>

