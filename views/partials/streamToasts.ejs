<% if(data.twitchStreams) { %>
    <div class="position-absolute w-100 d-flex flex-column p-1">
        <% for(let i = 0;i < data.twitchStreams.length ;i++) { %>
            <% if(data.twitchStreams[i].online) { %>
                <div class="toast ml-auto" role="alert" data-delay="5000" data-autohide="true" id="myToast">
                    <div class="toast-header">
                        <strong class="mr-auto text-primary"><i
                                    class="fab fa-twitch"></i> <%= data.twitchStreams[i].name %></strong>
                        <span class="badge badge-success float-right">Online</span>
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                    <div class="toast-body">
                        <a href="/stream">
                            <div class="row">
                                <div class="col-4">
                                    <img class="img-thumbnail img-fluid" src="<%= data.twitchStreams[i].img %>">
                                </div>
                                <div class="col-8">
                                    <%= data.twitchStreams[i].name %><br>
                                    <small class="text-muted">streaming: <%= data.twitchStreams[i].game %></small>
                                    <br>
                                    <div class="dropdown-divider"></div>
                                    <%= data.twitchStreams[i].description %>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>
<% } %>
